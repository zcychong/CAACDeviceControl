<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:shawn="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_first_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:minHeight="160dp"
                android:maxHeight="200dp"
                android:scaleType="centerCrop"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal">
                <com.caac.android.caacdevicecontrol.view.CircleImageView
                    android:id="@+id/civ_avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    shawn:civ_border_color="@android:color/white"
                    shawn:civ_border_width="2dp"
                    android:src="@mipmap/icon_default_avatar"
                    />
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_alignBottom="@id/civ_avatar"
                    android:layout_toRightOf="@id/civ_avatar"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="18sp"
                    android:text="发布人姓名"
                    android:textColor="@color/light_black"
                    />

                <TextView
                    android:id="@+id/tv_grouop"
                    android:layout_alignBottom="@id/civ_avatar"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textSize="18sp"
                    android:text="上报科室"
                    android:textColor="@color/light_black"
                    />
            </RelativeLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_text"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:minHeight="50dp"
            android:textSize="18sp"
            android:text="热了"
            android:textColor="@color/light_black"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_time"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016/8/1"
                android:textSize="18sp"
                android:textColor="@color/light_black"/>
            <TextView
                android:id="@+id/tv_leave_message_count"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="5dp"
                android:drawableLeft="@mipmap/icon_leave_message"
                android:text="0"
                android:gravity="top"
                android:textSize="18sp"
                android:textColor="@color/light_black"
                />
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/tv_leave_message_count"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:duplicateParentState="true"
                />
        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>
